<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.welcome.activities.WelcomeActivity">

    <data>

        <variable
            name="welcomeEventHandler"
            type="com.donhat.se330.flower_shop_management.frontend.features.welcome.eventhandlers.WelcomeEventHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_2"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:dotsColor="@color/green"
            app:dotsWidthFactor="3.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_pager_2"
            app:selectedDotColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/welcome_btn"
            android:layout_width="215dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/green_background_btn"
            android:elevation="0dp"
            android:fontFamily="@font/inter_bold"
            android:onClick="@{welcomeEventHandler::onWelcomeBtnClicked}"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dots_indicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>